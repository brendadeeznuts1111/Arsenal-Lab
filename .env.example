# Arsenal Lab Configuration - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env TO VERSION CONTROL

# Google Analytics (Required for tracking)
GOOGLE_ANALYTICS_ID=G-YOUR-GA-ID-HERE

# GitHub Configuration (for API integration and links)
GITHUB_USERNAME=your-github-username
GITHUB_REPO=your-repo-name
GITHUB_TOKEN=ghp_your_personal_access_token_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Keys (generate your own random strings)
SESSION_SECRET=your-super-secret-session-key-here
API_SECRET_KEY=your-api-secret-key-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL_ID=@arsenallab_channel
TELEGRAM_GROUP_ID=@arsenallab
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-here

# Optional: Third-party integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Database (if needed in future)
DATABASE_URL=sqlite://./data/app.db

# Email (if needed for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
