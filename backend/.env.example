# Database Configuration
DATABASE_URL=file:./build-arsenal.db

# NuFire Storage Configuration
NUFIRE_STORAGE_URL=https://storage.nufire.com/api/v1
NUFIRE_STORAGE_API_KEY=your_nufire_api_key_here

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
S3_BUCKET=build-arsenal
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Analytics and Monitoring
ANALYTICS_ENABLED=false
METRICS_ENDPOINT=https://metrics.yourdomain.com/api/v1/metrics

# Optional: Authentication (if implementing user auth)
JWT_SECRET=your_jwt_secret_here
SESSION_TIMEOUT=3600000

# Optional: Team Collaboration
TEAM_FEATURES_ENABLED=true
MAX_TEAM_SIZE=50

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
