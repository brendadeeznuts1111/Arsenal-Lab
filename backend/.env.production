# Production Environment Variables for Arsenal Lab Backend v2.0.0
# A+ Grade Enterprise Solution - October 2025

# Core Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database (SQLite for demo - use PostgreSQL in real production)
DATABASE_URL=file:./build-arsenal.db

# Authentication (Generate a secure 256-bit secret in production)
JWT_SECRET=demo-jwt-secret-change-in-production-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_ISSUER=arsenal-lab-backend
JWT_AUDIENCE=arsenal-lab-frontend

# AWS S3 Storage (Configure with real AWS credentials in production)
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=demo-access-key
S3_SECRET_ACCESS_KEY=demo-secret-key
S3_BUCKET=arsenal-lab-builds
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# NuFire Storage (Configure with real API key in production)
NUFIRE_STORAGE_URL=https://storage.nufire.com/api/v1
NUFIRE_STORAGE_API_KEY=demo-nufire-api-key

# Security Configuration
ALLOWED_ORIGINS=https://arsenal-lab.com,https://app.arsenal-lab.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Production Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=info

# Enterprise Features
FEATURE_SECURITY_SCANNING=true
FEATURE_ANALYTICS=true
FEATURE_TEAM_COLLABORATION=true
FEATURE_REAL_TIME_UPDATES=true

