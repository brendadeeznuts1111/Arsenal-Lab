/* components/DatabaseInfrastructureArsenal/styles.css */
.database-arsenal {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  z-index: 50;
  width: 520px;
  max-height: 90vh;
  overflow-y: auto;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px) saturate(180%);
  border-radius: 1.5rem;
  box-shadow:
    0 25px 50px -12px rgba(0, 0, 0, 0.25),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
}

.dark .database-arsenal {
  background: rgba(17, 24, 39, 0.95);
  border: 1px solid rgba(55, 65, 81, 0.5);
}

/* Header */
.arsenal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.header-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  border-radius: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-icon span {
  font-size: 1.25rem;
  color: white;
}

.header-content h2 {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
}

.live-metrics {
  display: flex;
  gap: 0.5rem;
  font-size: 0.75rem;
  color: #6b7280;
}

.header-badge {
  padding: 0.25rem 0.75rem;
  background: rgba(16, 185, 129, 0.1);
  color: #059669;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
}

/* Tab Bar */
.tab-bar {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-bottom: 1rem;
}

.tab-button {
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  border: 1px solid #d1d5db;
  background: #f9fafb;
  color: #6b7280;
  font-size: 0.75rem;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.tab-button:hover {
  background: #f3f4f6;
}

.tab-button.active {
  color: white;
  border-color: transparent;
}

.tab-button.active.blue {
  background: #3b82f6;
}

.tab-button.active.red {
  background: #ef4444;
}

.tab-button.active.green {
  background: #10b981;
}

.tab-button.active.orange {
  background: #f97316;
}

/* Tab Content */
.tab-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.tab-panel {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

/* Panel Header */
.panel-header h3 {
  font-size: 1rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 0.5rem 0;
}

.panel-header p {
  color: #6b7280;
  font-size: 0.875rem;
  margin: 0;
}

/* Configuration Sections */
.config-section {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  padding: 1rem;
  background: #f9fafb;
  border-radius: 0.5rem;
  border: 1px solid #e5e7eb;
}

.section-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
}

/* SQLite Specific */
.config-options {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.config-option {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
}

.config-checkbox {
  border-radius: 0.25rem;
  border: 1px solid #d1d5db;
}

.config-label {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-weight: 500;
  color: #374151;
}

.config-desc {
  color: #6b7280;
  flex: 1;
}

/* Type Grid */
.type-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.type-column {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.type-label {
  font-weight: 600;
  font-size: 0.75rem;
  color: #374151;
}

.type-values {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  padding: 0.5rem;
  border-radius: 0.25rem;
}

.declared-types {
  background: #dbeafe;
  color: #1e40af;
}

.actual-types {
  background: #dcfce7;
  color: #166534;
}

.type-desc {
  font-size: 0.75rem;
  color: #6b7280;
  margin: 0;
  font-style: italic;
}

/* Redis Specific */
.benchmark-table {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.benchmark-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem;
  background: #fef2f2;
  border-radius: 0.25rem;
}

.benchmark-op {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-weight: 500;
  color: #991b1b;
}

.benchmark-times {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.bun-time {
  color: #dc2626;
  font-weight: 600;
}

.vs-text {
  color: #6b7280;
  font-size: 0.75rem;
}

.ioredis-time {
  color: #6b7280;
}

.speedup-badge {
  padding: 0.125rem 0.375rem;
  background: #dc2626;
  color: white;
  border-radius: 0.25rem;
  font-size: 0.625rem;
  font-weight: 600;
}

/* WebSocket Specific */
.protocol-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.protocol-button {
  padding: 0.25rem 0.5rem;
  border: 1px solid #d1d5db;
  background: white;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  cursor: pointer;
  transition: all 0.2s;
}

.protocol-button:hover {
  background: #f9fafb;
}

.protocol-button.active {
  background: #10b981;
  color: white;
  border-color: #10b981;
}

.protocol-desc {
  font-size: 0.75rem;
  color: #6b7280;
}

.protocol-highlight {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  color: #059669;
  font-weight: 500;
}

.compression-toggle {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
}

.compression-checkbox {
  border-radius: 0.25rem;
  border: 1px solid #d1d5db;
}

.compression-label {
  font-weight: 500;
  color: #374151;
}

.compression-desc {
  font-size: 0.75rem;
  color: #6b7280;
  margin: 0.25rem 0 0 0;
}

.headers-list {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.header-item {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  display: flex;
  justify-content: space-between;
}

.header-key {
  color: #3b82f6;
}

.header-value {
  color: #374151;
}

/* S3 Specific */
.storage-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
}

.storage-button {
  padding: 0.25rem 0.5rem;
  border: 1px solid #d1d5db;
  background: white;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

.storage-button:hover {
  background: #f9fafb;
}

.storage-button.active {
  background: #f97316;
  color: white;
  border-color: #f97316;
}

.storage-desc {
  font-size: 0.75rem;
  color: #6b7280;
}

.storage-highlight {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  color: #ea580c;
  font-weight: 500;
}

.virtual-toggle {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
}

.virtual-checkbox {
  border-radius: 0.25rem;
  border: 1px solid #d1d5db;
}

.virtual-label {
  font-weight: 500;
  color: #374151;
}

.virtual-desc {
  font-size: 0.75rem;
  color: #6b7280;
  margin: 0.25rem 0 0 0;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
}

.list-example {
  background: #f9fafb;
  border-radius: 0.25rem;
  padding: 0.75rem;
}

.list-code {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  color: #374151;
  line-height: 1.4;
}

/* Code Sections */
.code-section {
  position: relative;
}

.code-block {
  background: #1f2937;
  border-radius: 0.5rem;
  padding: 1rem;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  line-height: 1.5;
  overflow-x: auto;
  white-space: pre;
  color: #f9fafb;
}

.sqlite-code {
  color: #60a5fa;
}

.redis-code {
  color: #f87171;
}

.websocket-code {
  color: #34d399;
}

.s3-code {
  color: #fb923c;
}

.copy-button {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.625rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.sqlite-copy {
  background: #3b82f6;
  color: white;
}

.sqlite-copy:hover {
  background: #2563eb;
}

.redis-copy {
  background: #ef4444;
  color: white;
}

.redis-copy:hover {
  background: #dc2626;
}

.websocket-copy {
  background: #10b981;
  color: white;
}

.websocket-copy:hover {
  background: #059669;
}

.s3-copy {
  background: #f97316;
  color: white;
}

.s3-copy:hover {
  background: #ea580c;
}

/* Features List */
.features-list {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
  color: #374151;
}

.feature-check {
  color: #10b981;
  font-weight: 600;
}

/* Live Demo Sections */
.live-demo-section {
  padding: 1rem;
  background: #f8fafc;
  border-radius: 0.5rem;
  border: 1px solid #e2e8f0;
}

.demo-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 1rem 0;
}

.demo-controls {
  margin-bottom: 1rem;
}

.operation-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
}

.demo-button {
  padding: 0.375rem 0.75rem;
  border: none;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

.demo-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.sqlite-demo-button {
  background: #3b82f6;
  color: white;
}

.sqlite-demo-button:hover:not(:disabled) {
  background: #2563eb;
}

.redis-set-button {
  background: #ef4444;
  color: white;
}

.redis-set-button:hover:not(:disabled) {
  background: #dc2626;
}

.redis-get-button {
  background: #10b981;
  color: white;
}

.redis-get-button:hover:not(:disabled) {
  background: #059669;
}

.redis-hset-button {
  background: #8b5cf6;
  color: white;
}

.redis-hset-button:hover:not(:disabled) {
  background: #7c3aed;
}

.redis-pub-button {
  background: #f97316;
  color: white;
}

.redis-pub-button:hover:not(:disabled) {
  background: #ea580c;
}

.demo-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1rem;
}

.demo-column {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.demo-column-label {
  font-weight: 600;
  font-size: 0.75rem;
  color: #374151;
}

.demo-column-content {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.type-info {
  font-size: 0.75rem;
}

.type-declared {
  color: #3b82f6;
  font-weight: 500;
}

.type-actual {
  color: #10b981;
  font-weight: 500;
}

.user-row {
  display: grid;
  grid-template-columns: 2rem 1fr 2rem;
  gap: 0.5rem;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  padding: 0.25rem;
  background: white;
  border-radius: 0.25rem;
  border: 1px solid #e5e7eb;
}

.user-id {
  color: #6b7280;
  text-align: center;
}

.user-name {
  color: #374151;
}

.user-age {
  color: #6b7280;
  text-align: center;
}

.operations-log {
  margin-bottom: 1rem;
}

.log-header {
  font-weight: 600;
  font-size: 0.75rem;
  color: #374151;
  margin-bottom: 0.5rem;
}

.log-entries {
  max-height: 120px;
  overflow-y: auto;
  border: 1px solid #e5e7eb;
  border-radius: 0.25rem;
  background: white;
}

.log-empty {
  padding: 1rem;
  text-align: center;
  color: #6b7280;
  font-size: 0.75rem;
}

.log-entry {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.375rem 0.75rem;
  border-bottom: 1px solid #f3f4f6;
}

.log-entry:last-child {
  border-bottom: none;
}

.operation-name {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 0.75rem;
  color: #374151;
}

.operation-time {
  color: #10b981;
  font-weight: 500;
  font-size: 0.75rem;
}

.operation-status {
  color: #10b981;
  font-weight: 600;
}

.demo-stats {
  display: flex;
  gap: 1rem;
  font-size: 0.75rem;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
}

.stat-label {
  color: #6b7280;
  font-size: 0.625rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-value {
  color: #374151;
  font-weight: 600;
}

.stat-value.success {
  color: #10b981;
}

.demo-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
  color: #374151;
}

.status-indicator {
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.625rem;
  font-weight: 600;
}

.status-indicator.success {
  background: #dcfce7;
  color: #166534;
}

/* Responsive Design */
@media (max-width: 768px) {
  .database-infrastructure-arsenal {
    width: calc(100vw - 2rem);
    left: 1rem;
    right: 1rem;
    bottom: 1rem;
  }

  .demo-grid {
    grid-template-columns: 1fr;
  }

  .type-grid {
    grid-template-columns: 1fr;
  }

  .storage-grid {
    grid-template-columns: 1fr;
  }

  .operation-buttons {
    grid-template-columns: 1fr;
  }
}
